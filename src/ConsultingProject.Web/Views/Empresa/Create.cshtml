@model ConsultingProject.Core.Domain.Empresa

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MenuAdmin.cshtml";
}

<h1>Crear</h1>

<h4>Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="IdEmpresa" class="control-label"></label>
                <input asp-for="IdEmpresa" class="form-control" required="" pattern="[A-Za-z0-9]+" minlength="6" maxlength="6" />
                <span asp-validation-for="IdEmpresa" class="text-danger"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdEmpresa" required="" pattern="[A-Za-z0-9]+" minlength="6" maxlength="6" />

            </div>
            <div class="form-group">
                <label asp-for="NombreEmpresa" class="control-label"></label>
                <input asp-for="NombreEmpresa" class="form-control" required="" pattern="[A-Za-z0-9]+" minlength="1" maxlength="40"  />

                <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
            </div>

                <div class="form-group">
                    <label asp-for="Nit" class="control-label"></label>
                    <input asp-for="Nit" class="form-control" required="" pattern="[0-9]+" minlength="12" maxlength="12" />
                    <span asp-validation-for="Nit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DigitoVerificacion" class="control-label"></label>
                    <input asp-for="DigitoVerificacion" class="form-control" required="" pattern="[0-9]+" minlength="6" maxlength="6" />
                    <span asp-validation-for="DigitoVerificacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fechaconstlegal" class="control-label"></label>
                    <input asp-for="Fechaconstlegal" class="form-control" required=""/>
                    <span asp-validation-for="Fechaconstlegal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CódigoDepartamento" class="control-label"></label>
                    <select asp-for="CódigoDepartamento" class="form-control" asp-items="ViewBag.CódigoDepartamento" required=""></select>
                    <span asp-validation-for="CódigoDepartamento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CódigoMunicipio" class="control-label"></label>
                    <select asp-for="CódigoMunicipio" class="form-control" asp-items="ViewBag.CódigoMunicipio" required=""></select>
                    <span asp-validation-for="CódigoMunicipio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdSector" class="control-label"></label>
                    <select asp-for="IdSector" class="form-control" asp-items="ViewBag.IdSector" required=""></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdTamañoEmpresa" class="control-label"></label>
                    <select asp-for="IdTamañoEmpresa" class="form-control" asp-items="ViewBag.IdTamañoEmpresa" required=""></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdEje" class="control-label"></label>
                    <select asp-for="IdEje" class="form-control" asp-items="ViewBag.IdEje" required=""></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdProyecto" class="control-label"></label>
                    <select asp-for="IdProyecto" class="form-control" asp-items="ViewBag.IdProyecto" required=""></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdProfesional" class="control-label"></label>
                    <select asp-for="IdProfesional" class="form-control" asp-items="ViewBag.IdProfesional" required=""></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
