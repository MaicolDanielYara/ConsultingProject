@model IEnumerable<ConsultingProject.Core.Domain.Departamento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MenuAdmin.cshtml";
}

<h1>Contenido de Departmentos</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDepartamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CódigoDepartamento">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CódigoDepartamento">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.CódigoDepartamento">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
