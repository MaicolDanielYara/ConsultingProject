

@model IEnumerable<ConsultingProject.Core.Domain.Actividades>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MenuAdmin.cshtml";
}


<p></p>
<h1>Contenido de Actividades</h1>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Cerrar</span>
        </button>
    </div>
}
@if (TempData["MensajeEliminar"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["MensajeEliminar"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Cerrar</span>
        </button>
    </div>
}

@if (User.IsInRole("Administrador"))
{
    <p>
        <a asp-action="Create" class="btn btn-warning">Crear Nuevo</a>
    </p>
}
@if (User.IsInRole("Profesional"))
{
    <p>
        <a asp-action="Create" class="btn btn-warning">Crear Nuevo</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreActividad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionActividad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEtapaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProfesionalNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProyectoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreActividad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescripcionActividad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEtapaNavigation.IdEtapa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProfesionalNavigation.IdProfesional)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProyectoNavigation.IdProyecto)
                </td>
                @if (User.IsInRole("Administrador"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdActividad" class="btn btn-primary">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdActividad" class="btn btn-info">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdActividad" class="btn btn-danger">Eliminar</a>
                    </td>
                }
                @if (User.IsInRole("Profesional"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdActividad" class="btn btn-primary">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdActividad" class="btn btn-info">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdActividad" class="btn btn-danger">Eliminar</a>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>



