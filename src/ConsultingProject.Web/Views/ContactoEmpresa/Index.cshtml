@model IEnumerable<ConsultingProject.Core.Domain.ContactoEmpresa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombresContactoEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidosContactoEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombresContactoEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidosContactoEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdContactoEmpresa">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdContactoEmpresa">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdContactoEmpresa">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
