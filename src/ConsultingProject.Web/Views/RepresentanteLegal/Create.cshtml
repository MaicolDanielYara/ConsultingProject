@model ConsultingProject.Core.Domain.RepresentanteLegal

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<h4>Representante Legal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdReprLegal" class="control-label"></label>
                <input asp-for="IdReprLegal" class="form-control" />
                <span asp-validation-for="IdReprLegal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoDocumento" class="control-label"></label>
                <select asp-for="IdTipoDocumento" class ="form-control" asp-items="ViewBag.IdTipoDocumento"></select>
            </div>
            <div class="form-group">
                <label asp-for="NoDocumento" class="control-label"></label>
                <input asp-for="NoDocumento" class="form-control" />
                <span asp-validation-for="NoDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
